TEXT
SYSTEM ${hr 1}
Uptime: $alignr$uptime
#CPU Temp: ${alignr}${acpitemp} C / 100 C
#CPU Freq: ${alignr}${freq} MHz
#GPU Temp: ${alignr}${nvidia temp} C / ${nvidia threshold} C
#GPU Freq: ${alignr}${nvidia gpufreq} MHz
#GPU MemFreq: ${alignr}${nvidia memfreq} MHz
Processes: ${alignr}$processes ($running_processes running)

Time: ${alignr}${time %T}
Date: ${alignr}${time %d/%m/%Y}

	CPU1	${cpu cpu1}% ${alignr}CPU2	${cpu cpu2}%     
${cpubar cpu1 4,107} ${alignr}${cpubar cpu2 4,107}
${cpugraph cpu1 25,107} ${alignr}${cpugraph cpu2 25,107}

RAM ${alignr}$mem / $memmax ($memperc%)
${membar 4}
SWAP ${alignr}$swap / $swapmax ($swapperc%)

Highest CPU $alignr CPU% MEM%
${top name 1}$alignr${top cpu 1}${top mem 1}
${top name 2}$alignr${top cpu 2}${top mem 2}
${top name 3}$alignr${top cpu 3}${top mem 3}

${if_up ppp0}
PPP0 ${hr 1}
Down ${downspeedf ppp0} k/s ${alignr}Up ${upspeedf ppp0} k/s
${downspeedgraph ppp0 25,107} ${alignr}${upspeedgraph ppp0 25,107}
Total ${totaldown ppp0} ${alignr}Total ${totalup ppp0}
$else
PPP0 DOWN
${if_up eth3}
ETH3 ${hr 1}
Down ${downspeedf eth3} k/s ${alignr}Up ${upspeedf eth3} k/s
${downspeedgraph eth3 25,107} ${alignr}${upspeedgraph eth3 25,107}
Total ${totaldown eth3} ${alignr}Total ${totalup eth3}
$else
ETH3 DOWN
$endif
$endif
${if_running rhythmbox}
RHYTHMBOX
${execp conkyRhythmbox --template=~/.conkyRhythmbox.template}
$else
RHYTHMBOX DOWN
$endif
